{
  "swagger": "2.0",
  "info": {
    "title": "PDF Comparator API",
    "description": "API to compare two PDF files and highlight differences.",
    "version": "1.0.0"
  },
  "host": "backend-production-2648.up.railway.app" ,
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/api/compare/report": {
      "post": {
        "summary": "Compare two PDF files",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "file1",
            "in": "formData",
            "required": true,
            "type": "file",
            "description": "First PDF file"
          },
          {
            "name": "file2",
            "in": "formData",
            "required": true,
            "type": "file",
            "description": "Second PDF file"
          }
        ],
        "responses": {
          "200": {
            "description": "Comparison successful - returns JSON containing compared PDF and summary",
            "schema": {
              "type": "object",
              "properties": {
                "summary_data": {
                  "type": "object",
                  "description": "Summary data extracted from comparison"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/compare/downloadpdf": {
      "post": {
        "summary": "Compare two PDF files",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "file1",
            "in": "formData",
            "required": true,
            "type": "file",
            "description": "First PDF file"
          },
          {
            "name": "file2",
            "in": "formData",
            "required": true,
            "type": "file",
            "description": "Second PDF file"
          }
        ],
        "responses": {
          "200": {
            "description": "Download successful - returns the compared PDF file",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/register/add": {
      "post": {
        "summary": "Register a new user",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string",
                  "example": "John"
                },
                "last_name": {
                  "type": "string"
                },
                "middle_name": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "first_name",
                "last_name",
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    }
  }
}